<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lay_details"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/fund_receive_border"
    android:orientation="vertical"
    android:padding="20dp">

    <RelativeLayout
        android:id="@+id/lay1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_jioaplan_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="301"
            android:textColor="#ffd50000"
            android:textSize="18.0dip" />

        <ImageView
            android:id="@+id/imgrs"
            android:layout_width="15.0dip"
            android:layout_height="15.0dip"
            android:layout_marginTop="6.0dip"
            android:layout_toLeftOf="@id/txt_jioaplan_amount"
            android:src="@drawable/rupee_black" />

        <TextView
            android:id="@+id/txt_jioplan_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="Talktime:"
            android:textColor="#ff000000"
            android:textSize="18.0dip" />

        <TextView
            android:id="@+id/talktime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/txt_jioplan_name"
            android:text=""
            android:textColor="#ff000000"
            android:textSize="18.0dip" />
    </RelativeLayout>

    <TextView
        android:id="@+id/discription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:text=""
        android:textSize="15.0dip" />
</LinearLayout>